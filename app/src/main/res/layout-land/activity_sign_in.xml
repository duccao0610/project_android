<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:background="@drawable/wallpaper"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:background="@drawable/circle_shape"
        android:id="@+id/image_view"
        android:src="@drawable/email"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/edittext_backg"
        android:textSize="60dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in"/>
    <TextView
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/edittext_backg"
        android:text="@string/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:paddingRight="@dimen/space_sign_in_to_icon"
        android:paddingLeft="@dimen/space_sign_in_to_icon"
        android:paddingBottom="@dimen/space_sign_in_to_icon"
        android:paddingTop="@dimen/space_sign_in_to_icon"
        android:id="@+id/edit1"
        android:textAlignment="center"
        android:hint="@string/user_hint"
        android:layout_marginTop="5dp"
        android:background="@color/edittext_backg"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:paddingRight="@dimen/space_sign_in_to_icon"
        android:paddingLeft="@dimen/space_sign_in_to_icon"
        android:paddingBottom="@dimen/space_sign_in_to_icon"
        android:paddingTop="@dimen/space_sign_in_to_icon"
        android:id="@+id/edit2"
        android:textAlignment="center"
        android:hint="@string/pass_hint"
        android:layout_marginTop="6dp"
        android:background="@color/edittext_backg"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

    <Button
        android:paddingRight="@dimen/space_sign_in_to_icon"
        android:paddingLeft="@dimen/space_sign_in_to_icon"
        android:paddingBottom="@dimen/space_sign_in_to_icon"
        android:paddingTop="@dimen/space_sign_in_to_icon"
        android:id="@+id/btn_signin"
        android:textColor="@color/btn_backg"
        android:background="@drawable/button_shape"
        android:layout_marginTop="10dp"
        android:text="@string/btn_sign_in"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>
    <com.google.android.gms.common.SignInButton
        android:id="@+id/btn_gg"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </com.google.android.gms.common.SignInButton>


</LinearLayout>